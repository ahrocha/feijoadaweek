{% extends 'base.html.twig' %}

{% block title %}A melhor feijoada{% endblock %}

{% block body %}

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>A primeira Feijoada Week foi um sucesso!</h1>
            <span class="subheading">A segunda edição foi adiada devido ao coronga e assim que uma data for decidida, será informada</span>
          </div>
        </div>
      </div>
    </div>
  </header>
    
<!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

    {% for prato in pratos %}
        <div class="post-preview">
          <a href="/restaurante/{{ prato.getRestaurante.getSlug|e }}"">
            <h2 class="post-title">
              {{ prato.getNome|e }} - {{ prato.getRestaurante.getNome|e }}
            </h2>
          </a>
            <p class="post-subtitle">
              {{ prato.getDescricao|raw }}
            </p>
          <p class="post-meta">Posted by
            <a href="#">Andrey</a>
            {{ prato.getData|date("d/m/Y") }}</p>
        </div>
        <hr>
    {% endfor %}

        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Mais antigos &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>
    
</div>
{% endblock %}
