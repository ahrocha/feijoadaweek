{% extends 'base.html.twig' %}

{% block title %}Restaurante {{ restaurante.getNome|e }} :: Feijoada Week{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="/">voltar</a>
    <h1>{{ restaurante.getNome|e }}</h1>
    <h3>{{ restaurante.getData|date("d/m/Y") }}</h3>
    
    {% for prato in pratos %}
        <h2>{{ prato.getNome|e }}</h2>
        <h3>{{ prato.getData|date("d/m/Y") }}</h3>
        <p>{{ prato.getDescricao|raw }} </p>
        <p>{{ prato.getVideo|raw }} </p>
    {% endfor %}

</div>
{% endblock %}
